<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <com.google.android.material.tabs.TabLayout
            style="@style/TabLayoutTheme"
            android:id="@+id/tabLayoutListProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorPrimary">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductAccessories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_accessories_bw"
                android:text="Accessories" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductAIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_aio_bw"
                android:text="All in One"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductCasing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_casing_bw"
                android:text="Casing"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductCoolerFan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_cooler_bw"
                android:text="Cooler Fan"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductDrawing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_drawing_bw"
                android:text="Drawing"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductDrone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_drone_bw"
                android:text="Drone" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProductFlashdisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icon_flashdisk_bw"
                android:text="Flashdisk"/>

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>